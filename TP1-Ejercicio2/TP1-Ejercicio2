package tp1ejercicio2;
import java.util.Scanner;
 
public class TP1Ejercicio2 {
 
    
    public static void main(String[] args) {
        int myArray1[] = TP1Ejercicio2.vector1();
        TP1Ejercicio2.mostrarOriginal(myArray1);
        TP1Ejercicio2.mostrarInvertido(myArray1);
        TP1Ejercicio2.contarParImpar(myArray1);
    }
    
    public static Scanner read = new Scanner(System.in);
    public static int t;
    
    public static int[] vector1() {
        t = Helper.validarEnteroPositivo("Ingrese el tamaño del vector: ");
        int myArray1[] = new int [t];
        int opcion;
            do {
                Helper.menu();
                opcion = Helper.validarEnteroPositivo("¿Como desea ingresar el Vector?");
                switch(opcion) {
                    case 1:
                        System.out.println("Ingrese " + t + " nº enteros al vector: ");
                        for(int i = 0; i < t; i++) {
                            do {
                                myArray1[i] = Helper.validarEntero("Ingrese el valor: ");
                                if(Helper.multiploCinco(myArray1[i]) == false) {
                                    System.out.println("El valor ingresado no es múltiplo de 5!");
                                } else if(Helper.multiploTres(myArray1[i]) == true) {
                                    System.out.println("El valor ingresado no debe ser múltiplo de 3!");
                                }
                            }while(Helper.multiploCinco(myArray1[i]) == false || Helper.multiploTres(myArray1[i]) == true);
                        }
                        break;
                    case 2:
                        System.out.println("Vector cargado...");
                        for(int i = 0; i < t; i++) {
                            myArray1[i] = Helper.randomMultiploCinco();        
                        }
                        break;
                        default:
                        System.out.println("Opción incorrecta, debe ingresar 1 o 2!");
                        break;
                }
            }while(opcion > 2);
        return myArray1;
    }
    
    public static int[] mostrarOriginal(int myArray1[]) {
        int original[] = new int[myArray1.length];
        System.out.println("Vector: ");
        for(int i = 0; i < myArray1.length; i++) {
            System.out.println(myArray1[i] + " ");
        }
        return original;
    }
    
    public static int[] mostrarInvertido(int myArray1[]) {
        int invertido[] = new int[myArray1.length];
        System.out.println("Vector invertido: ");
        for(int i = myArray1.length - 1; i >= 0; i--) {
            invertido[i] = myArray1[i];
            System.out.println(invertido[i] + " ");
        }
        return invertido;
    }
    
    public static int contarParImpar(int myArray1[]) {
        int par = 0, impar = 0;
        for(int i = 0; i < myArray1.length; i++) {
            if (myArray1[i] % 2 == 0) {
                par += 1;
            } else {
                impar += 1;
            }
        }
        System.out.println("Cantidad de pares ingresados: " + par);
        System.out.println("Cantidad de impares ingresados: " + impar);
        return par + impar;
    }
    
}
