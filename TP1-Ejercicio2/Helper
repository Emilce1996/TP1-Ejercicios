package tp1ejercicio2;
import java.util.Scanner;
import java.util.Random;
 
public class Helper {
    
    public static Scanner read = new Scanner(System.in);
    public static Random random = new Random();
    
    private static Integer validarEntero(String inputMessage, String errorMessage) {
        while (true) {
                try {
                    System.out.println(inputMessage);
                    return Integer.parseInt(read.nextLine());
                }catch (NumberFormatException e) {System.out.println(errorMessage);}
        }
    }
    
    public static Integer validarEntero(String inputMessage) {
        return validarEntero(inputMessage,"\nError: El valor ingresado no es un número entero");
    }
    
    public static boolean multiploCinco(int num) {
        boolean multi = false;
        if (num == 0) return false;
        if (num % 5 == 0) {
            multi = true;
        }
        return multi;
    }
    
    public static boolean multiploTres(int num) {
        boolean multi = false;
        if (num % 3 == 0) {
            multi = true;
        }
        return multi;
    }
    
    private static Integer validarEnteroPositivo(String inputMessage, String errorMessage) {
        while (true) {
            int n = validarEntero(inputMessage);
            if(n > 0) return n;
            System.out.println("\n" + errorMessage);
        }
    }
    
    public static Integer validarEnteroPositivo(String inputMessage) {
        return validarEnteroPositivo(inputMessage,"\nError: El valor ingresado no es un número positivo!");
    }
    
    public static int randomMultiploCinco() {
        int numero = random.nextInt(200);
        while (multiploCinco(numero) == false || Helper.multiploTres(numero) == true) {
            numero = random.nextInt(200);
        }
        return numero;
    }
    
    public static void menu() {
        System.out.println("MENU CARGAR VECTOR");
        System.out.println("1_Ingresar valores manualmente.");
        System.out.println("2_Generar valores aleatorios.");
    }
    
}
